---
const { platform, user } = Astro.props;
---

<a class={platform} href={`https://www.${platform}.com/${user}`} target="_blank">{platform}</a>

<style>
  a {
    color: #1a1a1a;
    opacity: 0.8;
    text-decoration: underline;
    text-underline-offset: 0.2em;
    cursor: pointer;
    font-weight: 500;
    font-family: Lora;
    line-height: 1.5;
    letter-spacing: 0.25px;
    text-transform: capitalize;
    transition: all 0.3s cubic-bezier(0.445, 0.05, 0.55, 0.95);

    &:hover {
      transform: scale(105%);
      opacity: 1;
      text-decoration: none;
    }
  }

  a.youtube:hover {
    color: rgb(144, 3, 12);
    background: -webkit-linear-gradient(
      0deg,
      rgba(144, 3, 12, 1) 0%,
      rgba(191, 38, 38, 1) 50%,
      rgba(238, 15, 15, 1) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  a.instagram:hover {
    color: rgb(69, 100, 220);
    background: -webkit-linear-gradient(
      0deg,
      rgba(69, 100, 220, 1) 0%,
      rgba(170, 44, 92, 1) 25%,
      rgba(236, 0, 117, 1) 50%,
      rgba(255, 105, 3, 1) 75%,
      rgba(255, 211, 102, 1) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  a.github:hover {
    color: rgb(36, 41, 46);
    background: -webkit-linear-gradient(
      0deg,
      rgba(36, 41, 46, 1) 0%,
      rgba(43, 49, 55, 1) 50%,
      rgba(45, 186, 78, 1) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  a.facebook:hover {
    color: rgb(59, 89, 152);
    background: -webkit-linear-gradient(0deg, rgba(59, 89, 152, 1) 0%, rgba(139, 157, 195, 1) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
